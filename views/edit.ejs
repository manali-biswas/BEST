<%-include("partials/header.ejs")%>
<link rel="stylesheet" href="../stylesheets/signin.css">
    <title>Update Blog</title>
    
<div class="container">
<h1>Update Blog</h1>
<br>
<form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Blog Title</label>
      <input type="text" class="form-control" name="blog[title]" id="title" value="<%=blog.title%>">
    </div>  
    <div class="form-group">
      <label for="body">Blog Body</label>
      <textarea class="form-control" name="blog[body]" id="body" rows="3" required><%=blog.body%></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<%-include("partials/footer.ejs")%>