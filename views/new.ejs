<%-include("partials/header.ejs")%>
<link rel="stylesheet" href="../stylesheets/signin.css">
    <title>New Blog</title>
    
<div class="container">
<h1>New Blog</h1>
<br>
<form action="/blogs" method="POST">
    <div class="form-group">
      <label for="title">Blog Title</label>
      <input type="text" class="form-control" name="blog[title]" id="title" placeholder="Blog 1">
    </div>   
    <div class="form-group">
      <label for="body">Blog Body</label>
      <textarea class="form-control" name="blog[body]" id="body" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" required>Submit</button>
  </form>
</div>
